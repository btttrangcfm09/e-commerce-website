{
    email xuanbui2902@gmail.com
    admin off
    # debug  # Bỏ comment để debug nếu cần
}

# HTTP → HTTPS redirect (cho tất cả domains/IPs)
http:// {
    redir https://{host}{uri} permanent
}

# Config cho domain exclusive.mom (Let's Encrypt)
exclusive.mom, www.exclusive.mom {
    # TLS tự động với Let's Encrypt (HTTP challenge)
    # Để trống = dùng HTTP challenge
    
    # Frontend app
    handle / {
        reverse_proxy frontend:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    # Backend API
    handle /api/* {
        reverse_proxy backend:5000 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    # Uploads static files
    handle /uploads/* {
        root * /app/uploads
        file_server
        header Cache-Control "public, max-age=31536000"
    }
    
    # Health checks
    handle /health {
        respond "OK" 200
    }
    
    handle /api/health {
        reverse_proxy backend:5000
    }
    
    # Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }
}

# Config dự phòng cho IP (self-signed cert)
# Nếu truy cập bằng IP hoặc domain chưa propagate
:443 {
    tls internal  # Self-signed certificate
    
    handle / {
        reverse_proxy frontend:3000
    }
    
    handle /api/* {
        reverse_proxy backend:5000
    }
}